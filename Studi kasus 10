#include <iostream>
using namespace std;
class kurama{
	public :
	  void input();
	  void output();
	  void proses();
	private:
    int *nim, nimMhs[10];
    string *nama, namaMhs[10];
};
void kurama::input(){
  	cout<<"================================="<<endl;
    cout <<"|      MAHASISWA YANG MASUK    |"<<endl;
	cout <<"|          BABAK FINAL         |"<<endl;
	cout<<"================================="<<endl;
    for (int i=0; i<5; i++){
      cout << "NIM PESERTA : "; cin >> nimMhs[i];
      cout << "NAMA PESERTA : "; cin >> namaMhs[i];
    }
    cout<<endl;
}
void kurama::proses(){
  	cout<<"------------------------------"<<endl;
    nim = new int[5];
    nama = new string[5];
    for(int i=0; i<5; i++){
      *nim = nimMhs[i];
      nim += 1;
      *nama = namaMhs[i];
      nama+=1;
    }
}
